    <Grid Name="gridAnimal">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="animalList" Grid.Row="1"  Grid.ColumnSpan= "2" 
          AutoGenerateColumns="False"
          CanUserAddRows="True"
          CanUserDeleteRows="True"
          IsReadOnly="False"
          SelectionMode="Single"
          Margin="10"
          SelectionUnit="FullRow"
          GridLinesVisibility="All"
          CanUserReorderColumns="False"
          CanUserResizeColumns="False"
          CanUserResizeRows="False"
          ScrollViewer.CanContentScroll="True" SelectionChanged="animalList_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox Name="shelters" Grid.Row="0" Width="300" Margin="10" Height="30" HorizontalAlignment="Left" SelectionChanged="shelters_SelectionChanged">
            <ComboBoxItem Content="Amphibianshelter"/>
            <ComboBoxItem Content="Fishshelter"/>
            <ComboBoxItem Content="Mammalshelter"/>
        </ComboBox>
        <TextBox Name="enterName" Grid.Column="0" Grid.Row="2" Height="48.673" VerticalAlignment="Top" Margin="10" TextBox.Text="enter name of animal" TextAlignment="Center"  VerticalContentAlignment="Center"
         HorizontalContentAlignment="Center" Foreground="LightGray" TextChanged="enterName_TextChanged"/>
        <TextBox Name="enterSpecies" Grid.Column="0" Grid.Row="2" Height="48.673" VerticalAlignment="Center" Margin="10" TextBox.Text="enter species of animal" TextAlignment="Center"  VerticalContentAlignment="Center"
         HorizontalContentAlignment="Center" Foreground="LightGray" TextChanged="enterSpecies_TextChanged"/>
        <TextBox Name="enterAge" Grid.Column="0" Grid.Row="2" Height="48.673" VerticalAlignment="Bottom" Margin="10" TextBox.Text="enter age of animal" TextAlignment="Center"  VerticalContentAlignment="Center"
         HorizontalContentAlignment="Center" Foreground="LightGray" TextChanged="enterAge_TextChanged"/>
        <Button Name="add" Grid.Column="1" Grid.Row="2" Height="78.01" Width="185" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Add" FontSize="20" Click="add_Click"/>
        <Button Name="adopt" Grid.Column="1" Grid.Row="2" Height="78.01" Width="185" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Adopt" FontSize="20" Click="adopt_Click"/>
        <Button Name="delete" Grid.Column="1" Grid.Row="2" Height="78.01" Width="185" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Delete" FontSize="20"/>
        <Button Name="greet" Grid.Column="1" Grid.Row="2" Height="78.01" Width="185" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Greet" FontSize="20" Click="greet_Click"/>
    </Grid>
</Window>
